//- Mixin blocks for portfolio pages

mixin logo
    #logo
        include ../../../assets/icons/bas-typelogo.svg

mixin back
    a#back(href="/" title="Back to Home" data-sound="click-down").button.secondary.arrow-left Back

mixin contact-button
    //- header
    button#contact-button.button.arrow-right(onclick="openContact()" data-sound="slide-left") Contact


