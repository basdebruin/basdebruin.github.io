include _includes/mixins/page-mixins.pug

// INTRO TEXT
section#intro
    h1.
        Hi I'm Bas, <br>
        an All-Round Designer who loves to solve problems; <br>
        I combine design and technology to craft interactive experiences.

section#intro: h1(style="color: var(--primary); text-align: center").
    &darr;&darr;&darr;&darr;&darr;&darr;&darr;&darr;&darr;&darr;&darr;


// PORTFOLIO ITEMS
section#work
    each item, index in collections.portfolioItems
        .portfolio-item
            .image
                span.metadata
                    p= item.data.client
                    p= item.data.date_range
                img(src='/assets/images/' + item.data.image alt='Image for ' + item.data.title)
            
            .content
                .title
                    strong.type= item.data.type
                    h2= item.data.title
                p= item.data.discription

                if item.data.link_to && item.data.link_text
                    a(href=item.data.link_to target="_blank" data-sound="click").button.arrow-right=  item.data.link_text
                else
                    a(href=item.url data-sound="click").button.arrow-right= item.data.link_text || "Read more"
        
        svg(width="100%").dashed-line
            line.line(x1=0 y1=0 x2=10000 y2=0 
                stroke="var(--primary)" stroke-width="4rem"
                stroke-dasharray="20 10")